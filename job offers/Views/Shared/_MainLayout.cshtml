
<!DOCTYPE html>

<html>
    <head>
        <meta name="viewport" content="width=device-width,initial scale=1"/> <!-- responsive for mobile-->
        <title>@Page.Title</title>
        <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
        <link href="~/Content/font-awesome.min.css" rel="stylesheet" />
        <link href="~/Content/StyleSheet1.css" rel="stylesheet" />
    </head>
    <body>
        <!-- Navbar-->
        <nav class ="navbar navbar-default navbar-fixed-top">
            <div class ="container">
                <div class="navbar-header">
                    <button class="navbar-toggle collapsed" data-toggle="collapse"
                            data-target="#navbar">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a href="#" class="navbar-brand">
                        <img src="~/images/mimimi.png" class="logo-size"/>

                    </a>


                </div>
                <div id="navbar" class="navbar-collapse collapse">
                    <ul class="nav navbar-nav navbar-left">

                        <li>
                            <a href="#">
                                <i class="glyphicon glyphicon-home"></i>
                                Accueil
                            </a>
                        </li>

                        
                        <li>
                            <a href="#">
                                <i class="glyphicon glyphicon-folder-open"></i>
                               Les categories d'emploi
                            </a>
                        </li>


                        <li>
                            <a href="#">
                                <i class="glyphicon glyphicon-info-sign"></i>
                                A propos du site
                            </a>
                        </li>


                        <li>
                            <a href="#">
                                <i class="glyphicon glyphicon-envelope"></i>
                                Contactez-nous
                            </a>
                        </li>


                    </ul>
              <!-- partial Login-->
                    @Html.Partial("_Login") 
                    
                
                </div>

            </div>


        </nav>

        <div class="container">
            <div class="row" style="min-height:550px;">
                @RenderBody()
            </div>
        </div>
      

     
        <!-- Footer-->
        <footer class="myfooter">
            <div class="container">
                <div class="row">
                    <div class="col-md-4">
                        <h3>
                            <i class="glyphicon glyphicon-question-sign"></i>
                            Qui sommes-nous?
                           
                        </h3>
                        <p>
                            Bienvenue sur notre site web .. Si vous recherchez un emploi, nous faciliterons votre travail. Si vous recherchez des travailleurs, nous sommes également en service.
                        </p>
                    </div>
                    <div class="col-md-4">
                        <h3>
                            <i class="glyphicon glyphicon-globe"></i>
                            Liens importants
                           
                        </h3>
                        <ul>
                            <li><a href="#">Emplois pour le secteur public</a></li>
                            <li><a href="#">Emplois pour le secteur privé</a></li>
                            <li><a href="#">Emplois en dehors du pays</a></li>
                            <li><a href="#">Emplois divers</a></li>
                        </ul>
                    </div>
                    <div class="col-md-4">
                        <h3 >
                            <i class="glyphicon glyphicon-envelope"></i>
                            Contactez nous
                           
                        </h3>
                        <ul>
                            <li><a href="#">Notre page facebook</a></li>
                            <li><a href="#">Suivez nous sur Twitter</a></li>
                            <li><a href="#">Regardez nous sur YouTube</a></li>
                            <li><a href="#">Laissez nous un message</a></li>
                        </ul>
                    </div>

                </div>
                <div class="subfooter">
                     <span>Tous droits réservés-2019</span>
                </div>

            </div>





        </footer>
        <script src="~/Scripts/jquery-1.12.1.min.js"></script>
        <script src="~/Scripts/bootstrap.min.js"></script>
    </body>
</html>
